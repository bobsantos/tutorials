<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="orderService" class="spring.core.ioc.service.OrderService">
        <constructor-arg ref="userService"></constructor-arg>
        <constructor-arg ref="productService"></constructor-arg>
    </bean>

    <bean id="authenticationService" class="com.baeldung.di.AuthenticationService">
        <property name="userService" ref="userService"/>
    </bean>

    <bean id="userService" class="com.baeldung.di.UserService"/>
    <bean id="productService" class="com.baeldung.di.ProductService"/>
</beans>